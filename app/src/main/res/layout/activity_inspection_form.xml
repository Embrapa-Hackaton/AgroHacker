<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/activity_formulary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Formulário de Inspeção"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:id="@+id/textView2"
            android:layout_height="60dp"/>

        <EditText android:hint="Nome do Inspetor"
                  android:layout_below="@+id/include_inspection_toolbar_form"
                  android:id="@+id/formulary_name"
                  android:layout_width="match_parent"
                  android:layout_height="57dp" />

        <TextView
            android:text="Pragas"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            android:background="@color/colorPrimary"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/lv_pragas">
        </ListView>

        <Button
            android:text="Adicionar Praga"
            android:onClick="addPrague"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonAddPrague"
            android:background="@drawable/round_corner_button"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Predadores"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView4"
            android:background="@color/colorPrimary"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/lv_predadores"/>

        <Button
            android:text="Adicionar Predador"
            android:onClick="addPredator"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonAddPredator"
            android:background="@drawable/round_corner_button"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>