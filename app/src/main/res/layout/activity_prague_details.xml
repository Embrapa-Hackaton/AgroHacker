<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include_prague_toolbar_details"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item_show_prague_foto"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:src="@drawable/insect"
                android:background="@drawable/round_corner" />

            <TextView
                android:id="@+id/item_show_prague_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome popular da praga"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"/>

            <TextView
                android:id="@+id/item_show_prague_scientific_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome cientifico da praga"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="italic"
                android:paddingLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/item_show_prague_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto descrevendo a praga"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bioecologia"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/item_show_prague_bioecology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inserir informações sobre a bioecologia da praga"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dano"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/item_show_prague_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dano que a praga causa"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fase do ciclo de vida"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/item_show_prague_life_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ovo"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>