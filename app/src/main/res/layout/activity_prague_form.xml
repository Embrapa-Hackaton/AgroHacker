<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/activity_prague_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:id="@+id/prague_form_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/person"
                android:background="#00A8EC" />

            <Button
                android:id="@+id/button_form_photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/camera_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </RelativeLayout>


        <EditText android:hint="Nome Popular"
            android:id="@+id/popular_name_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Nome Científico"
            android:id="@+id/scientific_name_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Cultura"
            android:id="@+id/culture_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Período de ataque"
            android:id="@+id/atack_period_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Período de vida"
            android:id="@+id/life_period_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Tipo de dano"
            android:id="@+id/damage_type_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Grupo"
            android:id="@+id/group_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>