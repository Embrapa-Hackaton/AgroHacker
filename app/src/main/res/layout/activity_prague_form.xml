<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/activity_prague_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar_main"
            android:id="@+id/include_prague_toolbar_form" />

        <RelativeLayout
            android:layout_below="@+id/include_prague_toolbar_form"
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:id="@+id/prague_form_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/insect"
                android:background="#00A8EC" />

            <Button
                android:id="@+id/button_prague_form_photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/camera_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </RelativeLayout>


        <EditText android:hint="Nome Popular"
            android:id="@+id/prague_popular_name_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Nome Científico"
            android:id="@+id/prague_scientific_name_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Descrição"
            android:id="@+id/prague_description_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Bioecologia"
            android:id="@+id/prague_bioecology_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Dano"
            android:id="@+id/prague_damage_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Estagio do ciclo de vida"
            android:id="@+id/prague_life_cycle_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>