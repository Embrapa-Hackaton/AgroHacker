<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:src="@drawable/splash_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Embrapa"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Manejo Integrado de Pragas)"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre o aplicativo"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:text="Agrohacker é um aplicativo que possibilite o produtor gerenciar seus inspetores, dados de inspeção, armadilhas e visualizar as pragas em seu talhão e nos talhões vizinhos. O aplicativo também proverá um espaço para aprender mais sobre as boas e más espécies que impactam na plantação. E será usado para ambos, produtor e inspetor da plantação em um trabalho conjunto."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre a empresa"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:text="A Embrapa é um grande instituto ​ de pesquisa vinculada ao Ministério da Agricultura, Pecuária e Abastecimento do Brasil"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>